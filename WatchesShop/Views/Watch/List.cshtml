@model WatchListViewModel

<section class="catalog">
    <div class="container catalog__container">
        <div class="catalog__top">
            <nav class="catalog__breadcrumbs breadcrumbs">
                <div class="breadcrumbs__item">
                    <a href="/" class="breadcrumbs__link">Главная</a>
                </div>
                <div class="breadcrumbs__item">
                    <a class="breadcrumbs__link">Наручные часы</a>
                </div>
            </nav>
            <h1 class="catalog__title">Каталог наручных часов</h1>
        </div>

        <div class="catalog__body">
            <div class="catalog__btns">
                <button class="catalog__filters-btn btn-reset">Фильтры</button>
            </div>
            <div class="catalog__filters filters">
                <div class="filters__mobile-title">
                    Подбор параметров
                    <button class="filters__close-icon btn-reset">                     
                        <span></span>
                    </button>
                </div>
                <form asp-controller="Watch" asp-action="List" method="get" class="filters__form">
                    <div class="filters__item">
                        <div class="filters__name">Пол</div>
                        <div class="filters__spoiler-btn _active"></div>
                        <div class="filters__sub-list _active">
                            <div class="filters__sub-item">
                                <label class="checkbox">
                                    <input type="checkbox" class="checkbox__input" name="category" value="Мужские" checked>
                                    <span class="checkbox__styled-input"></span>
                                    <span class="checkbox__text">Мужские</span>
                                </label>
                            </div>
                            <div class="filters__sub-item">
                                <label class="checkbox">
                                    <input type="checkbox" class="checkbox__input" name="category" value="Женские" checked>
                                    <span class="checkbox__styled-input"></span>
                                    <span class="checkbox__text">Женские</span>
                                </label>
                            </div>
                            <div class="filters__sub-item">
                                <label class="checkbox">
                                    <input type="checkbox" class="checkbox__input" name="category" value="Унисекс" checked>
                                    <span class="checkbox__styled-input"></span>
                                    <span class="checkbox__text">Унисекс</span>
                                </label>
                            </div>
                        </div>
                        <div class="filters__item">
                            <div class="filters__name">Тип часов</div>
                            <div class="filters__spoiler-btn"></div>
                            <div class="filters__sub-list">
                                <div class="filters__sub-item">
                                    <label class="checkbox">                                      
                                        <input type="checkbox" name="type" value="Smart" class="checkbox__input">
                                        <span class="checkbox__styled-input"></span>
                                        <span class="checkbox__text">Умные часы</span>
                                    </label>
                                </div>
                                <div class="filters__sub-item">
                                    <label class="checkbox">                                      
                                        <input type="checkbox" name="type" value="Wrist" class="checkbox__input">
                                        <span class="checkbox__styled-input"></span>
                                        <span class="checkbox__text">Умные часы часы</span>
                                    </label>
                                </div>
                            </div>
                    </div>
                    <div class="filters__btns">
                        <button type="submit" class="filters__show-btn btn-reset">Показать</button>
                        <button type="reset" class="filters__reset-btn btn-reset">Сбросить</button>
                    </div>
                </div>
            </form>
        </div>

        </div>
        <div class="catalog__items">
            @foreach (Watch watch in Model.allWatch)
            {
                @Html.Partial("AllWatch", watch)
            }
    </div>
</section>
